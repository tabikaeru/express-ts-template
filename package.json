    "eslint-plugin-prettier": "^3.1.4",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
